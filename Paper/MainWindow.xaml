<Window x:Class="Paper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paper"
        WindowState="Maximized"
        Height="700"
        Width="1200"
        Icon="/Images/logo.ico"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#2196F3"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                        Value="False">
                    <Setter Property="Background"
                            Value="#BDBDBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#F5F5F5"/>
            <Setter Property="Foreground"
                    Value="#2196F3"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#2196F3"/>
            <Setter Property="Padding"
                    Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- Header -->
        <Border Height="60"
                VerticalAlignment="Top"
                Background="White">
            <Grid>
                <!-- Logo -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="20,0,0,0">
                    <Image Source="/Images/paper.jpg"
                           Height="60"
                           Width="100"/>
                  
                </StackPanel>

                <!-- Profile -->
                <Border Width="40"
                        Height="40"
                        CornerRadius="20"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        Cursor="Hand">
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/profile.png"/>
                    </Border.Background>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,60,0,0">
            <!-- Left Sidebar -->
            <Border Width="250"
                    HorizontalAlignment="Left"
                    Background="White">
                <StackPanel Margin="0,20">
                    <!-- New -->
                    <Button Height="50"
                            Margin="10,5"
                            Background="#2196F3"
                            BorderThickness="0"
                            Cursor="Hand"
                            >
                        <Grid Width="200">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                      Fill="#ffffff"
                                      Width="24"
                                      Height="24"/>
                                <TextBlock Text="New"
                                           Margin="15,0,0,0"
                                           FontSize="16"
                                           Foreground="#ffffff"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- My Space -->
                    <Button 
                            Height="50"
                            Margin="10,5"
                            Background="Transparent"
                            BorderThickness="0" Click="TabButton2">
                        <Grid Width="200">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M3,3H21V21H3V3M7,7V9H9V7H7M11,7V9H13V7H11M15,7V9H17V7H15M7,11V13H9V11H7M11,11V13H13V11H11M15,11V13H17V11H15M7,15V17H9V15H7M11,15V17H13V15H11M15,15V17H17V15H15Z"
                                      Fill="#424242"
                                      Width="24"
                                      Height="24"/>
                                <TextBlock Text="My Space"
                                           Margin="15,0,0,0"
                                           FontSize="16"
                                           Foreground="#424242"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Chat with AI -->
                    <Button Height="50"
                            Margin="10,5"
                            Background="Transparent"
                            BorderThickness="0" Click="TabButton3">
                        <Grid Width="200">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M20,2H4A2,2 0 0,0 2,4V22L6,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2M6,9H18V11H6M14,14H6V12H14M18,8H6V6H18"
                                      Fill="#424242"
                                      Width="24"
                                      Height="24"/>
                                <TextBlock Text="Chat with AI"
                                           Margin="15,0,0,0"
                                           FontSize="16"
                                           Foreground="#424242"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                    <!-- Logout -->
                    <Button Height="50"
                            Margin="10,5"
                            Background="Transparent"
                            BorderThickness="0">
                        <Grid Width="200">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z"
                                      Fill="#424242"
                                      Width="24"
                                      Height="24"/>
                                <TextBlock Text="Logout"
                                           Margin="15,0,0,0"
                                           FontSize="16"
                                           Foreground="#424242"/>
                            </StackPanel>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Right Content Area -->
            <Border Margin="260,10,10,10"
                    Background="White"
                    CornerRadius="10">
                <TabControl x:Name="MainTabControl"
                            BorderThickness="0"
                            SelectedIndex="0">
                    <!-- New Tab -->
                    <TabItem Visibility="Collapsed">
                        <Grid Margin="20">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        MaxWidth="600">
                                <!-- Title -->
                                <TextBlock Text="What do you want to learn today?"
                                           FontSize="32"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,40"/>

                                <!-- Upload Section -->
                                <Border Background="#F8F9FA"
                                        CornerRadius="15"
                                        Padding="40"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="2"
                                        Margin="0,0,0,30">
                                    <StackPanel>
                                        <!-- Upload Icon -->
                                        <Path Data="M9,16V10H5L12,3L19,10H15V16H9M5,20V18H19V20H5Z"
                                              Fill="#2196F3"
                                              Width="48"
                                              Height="48"
                                              Stretch="Uniform"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,20"/>

                                        <!-- Upload Text -->
                                        <TextBlock Text="Upload your PDF file"
                                                   FontSize="20"
                                                   FontWeight="Medium"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>

                                        <TextBlock Text="Drag and drop your file here or click to browse"
                                                   FontSize="14"
                                                   Foreground="#757575"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,10"/>

                                        <!-- Selected File Name -->
                                        <TextBlock x:Name="SelectedFileText"
                                                   Text="No file selected"
                                                   FontSize="14"
                                                   Foreground="#757575"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,20"/>

                                        <!-- Browse Button -->
                                        <Button Content="Browse Files"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="150"
                                                Height="45"
                                                HorizontalAlignment="Center"
                                                Click="BrowseFiles_Click"/>
                                    </StackPanel>
                                </Border>

                                <!-- Start Learning Button -->
                                <Button Content="Start Learning"
                                        Style="{StaticResource PrimaryButton}"
                                        Width="200"
                                        Height="50"
                                        FontSize="16"
                                        Click="StartLearning_Click"
                                        IsEnabled="False"
                                        x:Name="StartLearningButton"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
