<Window x:Class="Paper.ChatWithAIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paper"
        mc:Ignorable="d"
        WindowState="Maximized"
        Icon="/Images/logo.ico"
        Title="Paper"
        Height="720"
        Width="1080"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Message Style -->
        <Style x:Key="MessageBubble"
               TargetType="Border">
            <Setter Property="CornerRadius"
                    Value="15"/>
            <Setter Property="Padding"
                    Value="15,10"/>
            <Setter Property="Margin"
                    Value="0,5"/>
            <Setter Property="MaxWidth"
                    Value="280"/>
        </Style>

        <!-- User Message Style -->
        <Style x:Key="UserMessage"
               TargetType="Border"
               BasedOn="{StaticResource MessageBubble}">
            <Setter Property="Background"
                    Value="#2196F3"/>
            <Setter Property="HorizontalAlignment"
                    Value="Right"/>
        </Style>

        <!-- AI Message Style -->
        <Style x:Key="AIMessage"
               TargetType="Border"
               BasedOn="{StaticResource MessageBubble}">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
        </Style>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#2196F3"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White">
            <Grid Height="60">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <Button x:Name="BackButton"
                            Click="BackButton_Click">
                        <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                              Fill="#ffffff"
                              Width="24"
                              Height="24"/>
                    </Button>
                    <StackPanel Margin="15,0">
                        <TextBlock Text="AI Assistant"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Online"
                                   FontSize="12"
                                   Foreground="#4CAF50"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Chat Messages -->
        <ScrollViewer Grid.Row="1"
                      Margin="20,10"
                      x:Name="MessageScroller">
            <StackPanel x:Name="ChatMessages">
                <!-- AI Message -->
                <Border Style="{StaticResource AIMessage}">
                    <StackPanel>
                        <TextBlock Text="AI Assistant"
                                   FontSize="12"
                                   Foreground="#757575"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Hello! I'm your AI assistant. How can I help you learn from your PDF today?"
                                   TextWrapping="Wrap"
                                   Foreground="#424242"/>
                    </StackPanel>
                </Border>

                <!-- User Message -->
                <Border Style="{StaticResource UserMessage}">
                    <TextBlock Text="Hi! Can you help me understand this document?"
                               TextWrapping="Wrap"
                               Foreground="White"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Add this inside the Grid, before the Input Area -->
        <Grid x:Name="LoadingIndicator"
              Grid.Row="1"
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="40"
                             Height="40"/>
                <TextBlock Text="AI is thinking..."
                           Margin="0,10,0,0"
                           Foreground="#757575"/>
            </StackPanel>
        </Grid>

        <!-- Input Area -->
        <Border Grid.Row="2"
                Background="White">
            <Grid Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message Input -->
                <Border Background="#F5F5F5"
                        CornerRadius="20"
                        Padding="20,0">
                    <TextBox x:Name="MessageInput"
                             Height="40"
                             Background="Transparent"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Text="Type your message..."
                             GotFocus="MessageInput_GotFocus"
                             LostFocus="MessageInput_LostFocus"/>
                </Border>

                <!-- Send Button -->
                <Button Grid.Column="1"
                        Width="80"
                        Height="40"
                        Margin="10,0,0,0"
                        Click="SendMessage_Click">
                    <Path Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"
                          Fill="#ffffff"
                          Width="24"
                          Height="24"
                          Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
