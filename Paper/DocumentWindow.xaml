<Window x:Class="Paper.DocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paper"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        WindowState="Maximized"
        Icon="/Images/logo.ico"
        Title="Paper"
        Height="700"
        Width="1200"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#2196F3"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Margin"
                    Value="0,0,5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                         Value="True">
                    <Setter Property="Background"
                            Value="#2196F3"/>
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="FontWeight"
                            Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header Section -->
        <Border Height="60"
                VerticalAlignment="Top"
                Background="White">
            <Grid>
                <Button Content="← Back"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0"
                        Width="80"
                        Height="35"
                        Click="BackButton_Click"/>
                <TextBlock Text="Document Chat"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="Medium"/>
            </Grid>
        </Border>

        <Grid Margin="0,60,0,0">
            <!-- Left PDF Viewer Panel -->
            <Border Width="600"
                    HorizontalAlignment="Left"
                    Background="White"
                    CornerRadius="10"
                    Margin="10">
                <wv2:WebView2 x:Name="pdfViewer"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>

            </Border>

            <!-- Right Panel with Tabs -->
            <Border Margin="620,10,10,10"
                    Background="White"
                    CornerRadius="10">
                <TabControl BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabPanel">
                            <Setter Property="HorizontalAlignment"
                                    Value="Center"/>
                        </Style>
                    </TabControl.Resources>

                    <!-- Chat Tab -->
                    <TabItem Header="Chat">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Chat Display -->
                            <ScrollViewer Grid.Row="0"
                                          Margin="0,0,0,10">
                                <StackPanel x:Name="ChatMessagesPanel"
                                            Margin="10">
                                    <!-- User Message -->
                                    <Border Background="#E3F2FD"
                                            CornerRadius="10"
                                            Padding="15,10"
                                            Margin="0,5"
                                            HorizontalAlignment="Right"
                                            MaxWidth="400">
                                        <TextBlock Text="Can you explain what this document is about?"
                                                   TextWrapping="Wrap"/>
                                    </Border>

                                    <!-- AI Response -->
                                    <Border Background="#F5F5F5"
                                            CornerRadius="10"
                                            Padding="15,10"
                                            Margin="0,5"
                                            HorizontalAlignment="Left"
                                            MaxWidth="400">
                                        <TextBlock TextWrapping="Wrap">
                                            This document appears to be about artificial intelligence and machine learning concepts. It covers fundamental principles and applications in modern technology.
                                        </TextBlock>
                                    </Border>

                                    <!-- User Message -->
                                    <Border Background="#E3F2FD"
                                            CornerRadius="10"
                                            Padding="15,10"
                                            Margin="0,5"
                                            HorizontalAlignment="Right"
                                            MaxWidth="400">
                                        <TextBlock Text="Could you summarize the main points?"
                                                   TextWrapping="Wrap"/>
                                    </Border>

                                    <!-- AI Response -->
                                    <Border Background="#F5F5F5"
                                            CornerRadius="10"
                                            Padding="15,10"
                                            Margin="0,5"
                                            HorizontalAlignment="Left"
                                            MaxWidth="400">
                                        <TextBlock TextWrapping="Wrap">
                                            The main points include:
                                            1. Introduction to AI concepts
                                            2. Types of machine learning
                                            3. Applications in real-world scenarios
                                            4. Future implications and developments
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Loading Indicator -->
                            <Grid x:Name="LoadingIndicator"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="30"
                                        Height="30"
                                        BorderThickness="3"
                                        BorderBrush="#2196F3"
                                        CornerRadius="15">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Border.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation
                                                        Storyboard.TargetProperty="(Border.RenderTransform).(RotateTransform.Angle)"
                                                        From="0"
                                                        To="360"
                                                        Duration="0:0:1"
                                                        RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <Border.RenderTransform>
                                        <RotateTransform/>
                                    </Border.RenderTransform>
                                </Border>

                                <TextBlock Grid.Row="1"
                                           Text="AI is thinking..."
                                           Foreground="#2196F3"
                                           FontSize="12"
                                           Margin="0,5,0,0"
                                           HorizontalAlignment="Center"/>
                            </Grid>

                            <!-- Chat Input -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border CornerRadius="25"
                                        Background="#F0F2F5"
                                        Margin="0,0,10,0">
                                    <TextBox x:Name="MessageInput"
                                             Height="45"
                                             Padding="20,5"
                                             VerticalContentAlignment="Center"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Text="Type your message here..."
                                             KeyDown="MessageInput_KeyDown"/>
                                </Border>

                                <Button Grid.Column="1"
                                        Width="80"
                                        Height="40"
                                        Margin="10,0,0,0"
                                        Click="SendButton_Click">
                                    <Path Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"
                                          Fill="#ffffff"
                                          Width="24"
                                          Height="24"
                                          Stretch="Uniform"/>
                                </Button>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!-- Flashcards Tab -->
                    <TabItem Header="Flashcards">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Flashcard Display -->
                            <Border Grid.Row="0"
                                    Margin="20"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="15"
                                    Cursor="Hand">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Hint Text -->
                                    <TextBlock Text="Click to flip"
                                               HorizontalAlignment="Center"
                                               Margin="0,20,0,0"
                                               Foreground="#757575"
                                               FontSize="12"/>

                                    <!-- Flashcard Content -->
                                    <Grid x:Name="FlashcardPanel"
                                          Grid.Row="1"
                                          MouseLeftButtonDown="FlashcardPanel_MouseLeftButtonDown">
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="40">
                                            <!-- Question Side -->
                                            <TextBlock x:Name="QuestionText"
                                                       TextAlignment="Center"
                                                       FontSize="24"
                                                       FontWeight="Medium"
                                                       TextWrapping="Wrap"
                                                       MaxWidth="400"
                                                       Foreground="#FF0056FF"/>

                                            <!-- Answer Side (Initially Hidden) -->
                                            <TextBlock x:Name="AnswerText"
                                                       Text="Generative AI refers to artificial intelligence systems that can create new content, such as text, images, or code, based on patterns learned from training data."
                                                       TextAlignment="Center"
                                                       FontSize="20"
                                                       TextWrapping="Wrap"
                                                       MaxWidth="400"
                                                       Margin="0,20,0,0"
                                                       Visibility="Collapsed"
                                                       Foreground="Black"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Navigation Controls -->
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,20">
                                <Button
                                    x:Name="PrevButton"
                                    Content="Previous"
                                    Width="120"
                                    Height="40"
                                    Click="PrevButton_Click"
                                    Margin="0,0,15,0"/>
                                <Border Background="#F0F2F5"
                                        CornerRadius="5"
                                        Padding="15,8">
                                    <TextBlock
                                        x:Name="CounterText"
                                        Text="1/38"
                                        Foreground="#FF0056FF"
                                        VerticalAlignment="Center"
                                        FontWeight="Medium"/>
                                </Border>
                                <Button
                                    x:Name="NextButton"
                                    Content="Next"
                                    Width="120"
                                    Height="40"
                                    Margin="15,0,0,0"
                                    Click="NextButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!-- Summary Tab -->
                    <TabItem Header="Summary">
                        <Border Margin="10"
                                Background="#F8F9FA"
                                CornerRadius="8">
                            <ScrollViewer Margin="5">
                                <TextBox x:Name="SummaryContent"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="15"
                                         FontSize="14"/>
                            </ScrollViewer>
                        </Border>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
